import java.util.Scanner;

public class SistemaEscolar {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        double[] notas = new double[8];

        System.out.println("Digite as 8 notas do aluno:");

        // Recebe as 8 notas
        for (int i = 0; i < 8; i++) {
            System.out.print("Nota " + (i + 1) + ": ");
            notas[i] = scanner.nextDouble();
        }

        // Calcula média do 1º semestre (notas 0 a 3)
        double mediaSemestre1 = (notas[0] + notas[1] + notas[2] + notas[3]) / 4;

        // Calcula média do 2º semestre (notas 4 a 7)
        double mediaSemestre2 = (notas[4] + notas[5] + notas[6] + notas[7]) / 4;

        // Calcula média final
        double mediaFinal = (mediaSemestre1 + mediaSemestre2) / 2;

        // Exibe os resultados
        System.out.println("\nMédia do 1º semestre: " + mediaSemestre1);
        System.out.println("Média do 2º semestre: " + mediaSemestre2);
        System.out.println("Média final: " + mediaFinal);

        scanner.close();
    }
}
